{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowJs": true,
    "target": "ES6",
    "module": "Node16",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "coverage", "dist", "__tests__", "jest.config.js"]
}
